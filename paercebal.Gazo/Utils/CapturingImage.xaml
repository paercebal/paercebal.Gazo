<Window x:Class="paercebal.Gazo.Utils.CapturingImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paercebal.Gazo.Utils"
        mc:Ignorable="d"
        Title="Capturing Image" Height="450" Width="800" Background="Black"
        Activated="CapturingImage_Activated" Closed="CapturingImage_Closed"
        KeyUp="CapturingImage_KeyUp"
        MouseLeftButtonDown="CapturingImage_MouseLeftButtonDown" MouseLeftButtonUp="CapturingImage_MouseLeftButtonUp" MouseMove="CapturingImage_MouseMove"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!--
            <RowDefinition Height="Auto"/>
            -->
        </Grid.RowDefinitions>
        <Canvas Name="CapturingCanvas" Grid.Row="0" Grid.Column="0"/>
        <!--
        <TextBox Name="DebugOutput" Grid.Row="1" Grid.Column="0"/>
        -->
    </Grid>
</Window>
